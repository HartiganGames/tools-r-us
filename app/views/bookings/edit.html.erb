<div class="container">
  <h2>Edit your booking</h2>

    <%= simple_form_for([@tool, @booking]) do |f| %>
      <%= f.input :start_date, html5: true %>
      <%= f.input :end_date, html5: true %>
      <%= f.submit class: "btn btn-primary" %>
    <% end %>

  <%= link_to "Back to all tools", tools_path %>
</div>
