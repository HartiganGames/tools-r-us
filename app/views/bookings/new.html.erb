<div class="container">
  <div class="row">
    <div class="col-5 card shadow-sm p-4 mb-4" style="max-height: 360px">
      <h2>Add a new booking</h2>
      <div class="form-inputs mt-2">
        <%= simple_form_for([@tool, @booking]) do |f| %>
          <%= f.input :start_date, html5: true %>
          <%= f.input :end_date, html5: true %>
          <%= f.submit class: "btn btn-primary" %>
        <% end %>
      </div>
      <div class="mt-3">
        <%= link_to "Back to all tools", tools_path %>
      </div>
    </div>
    <div class="col-7 d-flex align-items-end flex-column bd-highlight">
        <div class="p-2 bd-highlight">
          <img src="/assets/logo-T.png" class="image_form_bg">
        </div>

        <div class="mt-3 bd-highlight text-right ">

          <%= link_to "Home", :back, class: " small  font-weight-light "%>
        </div>
    </div>


  </div>

</div>
