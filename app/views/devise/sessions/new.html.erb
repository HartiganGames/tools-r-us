<div class="container d-grid">
   <div class= "row">
      <div class="col-5 card shadow-sm p-4 object-fit" style="max-height: 350px">
      <h2>Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs mt-2">
          <%= f.input :email, label:false, placeholder:"Email",
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password, label:false, placeholder:"Password",
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-primary" %>
        </div>
        <%= render "devise/shared/links" %>
    <% end %>
    </div>

    <div class="col-7 d-flex align-items-end flex-column bd-highlight">
        <div class="p-2 bd-highlight">
          <img src="/assets/logo-T.png" class="image_form_bg">
        </div>


    </div>
   </div>
</div>

