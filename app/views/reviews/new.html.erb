<%= simple_form_for([ @tool, @review ]) do |f| %>
    <%= f.error_notification %>
  
    <div class="form-inputs">
      <%= f.input :content %>
      <%= f.input :rating, collection: Review::RATINGS %>
    </div>
  
    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-primary" %>
    </div>
<% end %>