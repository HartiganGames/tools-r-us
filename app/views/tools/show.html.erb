<div class= "container ">
  <div class= "row">
    <div class="col-xs-12 col-lg-7">
      <div class="product_details mt-5">
        <h1><%= @tool.name.upcase %></h1>
        <div class="d-inline-block">
          <p>★ 4.55 (12)  </p> 
        </div>
        <div class="d-inline-block">
          <p>·  <u>Stoke Newington, London, UK</u></p>
        </div>
        <div class="d-inline-block float-right mt-0">
          <p class="tag mt-0"><%= @tool.category %></p>  
        </div>
      </div>
      <img src="https://images.ctfassets.net/zma7thmmcinb/7lj9qlwKbgzj7avuaYYWj2/5da67aa7854a4c401f63af502227f572/choosing-the-right-garden-hoe-pv.jpg" alt="Garden Hoe" width="100%" height="400">
      <div class="mt-5">
        <p><%= @tool.description %></p>
      </div>
    </div>
    <div class="col-xs-12 col-lg-5">
      <div class="container d-flex justify-content-center">
        <div class="card mt-5 w-100">
          <div id="price" class="container d-flex justify-content-center mt-5">
            <div class="d-inline-block">
              <h1>£<%= @tool.price_per_day %></h1> 
            </div>
            <div class="d-inline-block mt-4">
              <p>/ a day</p>
            </div>
          </div>
          <button type="button" class="btn btn-primary btn-round-lg">Rent This Tool</button>
          <hr/>
          <span class="text-muted ml-4">About the Seller</span>
          <div class="media"> <img src="https://townsquare.media/site/696/files/2020/03/Bob-the-builder.png?w=980&q=75" class="mr-3" height="80">
            <div class="media-body">
              <h5 class="mt-1 mb-0">Bob The Builder</h5> 
              <p class="pt-1 mb-1">London, UK</p>
              <span class="text-muted">Member Since: 28 November 1998</span>
            </div>
          </div>
          <div class="d-flex flex-row justify-content-between align-items-center p-3 mx-3">
            <div class="d-flex flex-row align-items-center"><i class="fas fa-tools"></i>
              <div class="d-flex flex-row align-items-start ml-3"><span>View All Tools</span></div>
            </div>
            <div class="d-flex flex-row align-items-center mt-2"><i class="fas fa-angle-right"></i></div>
          </div>
          <div class="d-flex flex-row justify-content-between align-items-center p-3 mx-3">
            <div class="d-flex flex-row align-items-center"><i class="fas fa-calendar"></i>
              <div class="d-flex flex-row align-items-start ml-3"><span>View All Bookings</span></div>
            </div>
            <div class="d-flex flex-row align-items-center mt-2"><i class="fas fa-angle-right preview"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
